<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:top="2dp" android:right="2dp" android:left="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="#7e7e7e" /> <!-- Border thickness and color -->
            <corners android:radius="5dp" /> <!-- Corner radius to make it look like a box -->
        </shape>
    </item>
</layer-list>